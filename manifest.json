{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "JobTracker",
  "description": "A simple browser extension to track your job applications. Made with Extension.js",
  "icons": {
    "48": "images/jobtracker_48.png"
  },
  "author": "Ahmed Moussa",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "index.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "ui/popup.html",
        "ui/popup.css",
        "images/logo.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "jobtracker@ahmedmoussa.dev",
      "strict_min_version": "109.0"
    }
  }
}